<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="WebViewTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">#1B6EB4</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">

        <item name="android:textColor">#76D2FF</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="title">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="second_title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="data_blue">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0B89F0</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="data_red">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DD4F43</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="default_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>


    <style name="title_s">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="second_title_s">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="data_blue_s">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0B89F0</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="data_red_s">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DD4F43</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="default_text_s">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="news_title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
    <style name="news_content">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
</resources>
